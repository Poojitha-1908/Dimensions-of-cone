import random

def number_guessing_game():
    print("Welcome to the Number Guessing Game!")
    print("Try to guess the number between 1 and 100.")
    
    # Randomly choose a number between 1 and 100
    secret_number = random.randint(1, 100)
    attempts = 0
    max_attempts = 10  # Limit the number of attempts

    while attempts < max_attempts:
        try:
            guess = int(input(f"\nAttempt {attempts + 1} of {max_attempts}: Enter your guess: "))
            
            if guess < 1 or guess > 100:
                print("Please enter a number between 1 and 100.")
                continue

            attempts += 1

            if guess < secret_number:
                print("Too low! Try a higher number.")
            elif guess > secret_number:
                print("Too high! Try a lower number.")
            else:
                print(f"ðŸŽ‰ Congratulations! You guessed the number in {attempts} attempts.")
                break
        except ValueError:
            print("Invalid input. Please enter a valid integer.")

    if attempts == max_attempts and guess != secret_number:
        print(f"\nðŸ˜¢ Game Over! The correct number was {secret_number}.")

# Function to ask the user if they want to play again
def main():
    while True:
        number_guessing_game()
        play_again = input("\nDo you want to play again? (yes/no): ").strip().lower()
        if play_again != 'yes':
            print("Thanks for playing! Goodbye.")
            break

# Run the game
if __name__ == "__main__":
    main()
